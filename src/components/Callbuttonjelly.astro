      -webkit-text-stroke: 0.01em #00000015;
    }
    &::before {
      width: 70%;
      height: 2px;
      position: absolute;
      background-color: rgba(250, 250, 250, 0.5);
      content: "";
      filter: blur(1px);
      top: 7px;
      border-radius: 50%;
    }
    &::after {
      width: 70%;
      height: 2px;
      position: absolute;
      background-color: rgba(250, 250, 250, 0.137);
      content: "";
      filter: blur(1px);
      bottom: 7px;
      border-radius: 50%;
    }
    &:hover {
      border: var(--pico-primary-hover) 2px solid;
      transition: ease-in 0.25s;
    }
  }
