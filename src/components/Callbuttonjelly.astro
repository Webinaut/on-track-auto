<style lang="scss">
  /* From Uiverse.io by vinodjangid07 */

  .Btn {
    background-image: linear-gradient(var(--pico-primary), #ff5126);
    box-shadow:
      0px 10px 10px var(--pico-primary) inset,
      0px 5px 10px rgba(5, 5, 5, 0.212),
      0px -10px 10px #ff5126 inset;

    transition: 0.25s ease;
    padding: 0.6em 1.2em;
    margin: 0 1em;
    position: relative;

    border-radius: 1em;

    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    & span {
      color: var(--pico-primary-inverse);
      font-size: 1.2rem;
      font-weight: 600;
      text-shadow: 0.001em 0.05em 0.01em #0000;
      -webkit-text-stroke: 0.01em #00000015;
      filter: brightness(160%);
      &:hover {
        font-size: 1.4rem;
      }
    }
    &::before {
      width: 70%;
      height: 2px;
      position: absolute;
      background-color: rgba(250, 250, 250, 0.5);
      content: "";
      filter: blur(1px);
      top: 7px;
      border-radius: 50%;
    }
    &::after {
      width: 70%;
      height: 2px;
      position: absolute;
      background-color: rgba(250, 250, 250, 0.137);
      content: "";
      filter: blur(1px);
      bottom: 7px;
      border-radius: 50%;
    }

    &:hover {
      box-shadow:
        0px 10px 10px #ff5126 inset,
        0px 5px 10px rgba(5, 5, 5, 0.212),
        0px -10px 10px var(--pico-primary) inset;
    }
  }
</style>
