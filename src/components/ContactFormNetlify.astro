<form
  name="contact"
  method="POST"
  netlify-honeypot="bot-field"
  data-netlify="true"
  data-astro-reload
  novalidate
>
  <p class="hidden">
    <label>
      Don’t fill this out if you’re human: <input name="bot-field" />
    </label>
  </p>
  <input
    type="hidden"
    name="subject"
    data-remove-prefix
    value="Contact Form from royalparkladiesgolfclub.com.au"
  />
  <fieldset>
    <p><label>Name: <input type="text" name="name" /></label></p>
    <p>
      <label>Email Address: <input type="email" name="email" /></label>
    </p>
    <p>
      <label>
        Message: <textarea name="message"></textarea>
      </label>
    </p>
    <p>
      If you would like to see if we have a date available for a mobile service,
      please enter it here:
    </p>
    <p>
      <label for="date1">Your first choice date:</label>
      <input type="date" id="date1" name="date1" />
      <label for="date2">Your second choice date:</label>
      <input type="date" id="date2" name="date2" />
      <label for="date3">Your third choice date:</label>
      <input type="date" id="date3" name="date3" />
    </p>
  </fieldset>
  <div data-netlify-recaptcha="true"></div>
  <p>
    <button type="submit">Send</button>
  </p>
</form>
<style>
  .hidden {
    display: none;
  }
  label {
    color: var(--pico-color);
  }
  button {
    width: 50%;
    margin-top: 2em;
  }
</style>
